  margin-left: 20rpx;
}

.author-date{
  font-size: 30rpx;
  margin-left: 20rpx;
}





.head-img{
    width: 100%;
    height: 320rpx;
}

.author{
    font-size: 30rpx;
    font-weight: 700;
    margin-left: 20rpx;
    vertical-align: middle;
    color:#666;
}

.const-text{
    font-size: 24rpx;
