.article-list{
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
  margin-bottom: 40rpx;
  background-color: #fff;
  border-top:1px solid #ededed;
  border-bottom: 1px solid #ededed;
  padding: 10px;
  padding-bottom: 5px;
}

.article-list .author-icon{
  width: 60rpx;
  height: 60rpx;
  vertical-align: middle;
}

.article-list .author-text{
  font-size: 30rpx;
  margin-left: 20rpx;
}

.article-list .author-date{
  font-size: 30rpx;
  margin-left: 20rpx;
}

.article-list .title{
  font-size: 34rpx;
  font-weight: 700;
  color:#333;
  margin-bottom: 10px;
}

.article-list .article-img{
  margin-left: 16px;
  width: 100%;
  height: 340rpx;
  margin: auto 0;
  margin-bottom: 15px;
}

.article-list .article-text{
  color:#666;
  font-size: 26rpx;
  margin-bottom: 20rpx;
  letter-spacing: 2rpx;
  line-height: 40rpx;
}

.article-like{
    font-size: 13px;
    flex-direction: row;
    line-height: 16px;
}

.article-like-icon{
    height: 16px;
    width: 16px;
    margin-right: 8px;
    vertical-align: middle;
}

.article-like-text{
    vertical-align: middle;
    margin-right: 20px;
}