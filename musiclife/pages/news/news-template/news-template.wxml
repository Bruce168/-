
<template name="newsItem">
  <view class='article-list'>
    <view class='author' >
      <image class='author-icon' src='{{authoricon}}'></image>
      <text class='author-text'>{{author}}</text>
      <text class='author-date'>{{dataTime}}</text>
    </view>
    <text class='title'>{{title}}</text>
    <image class='article-img' src='{{articleimg}}'></image>
    <text class='article-text'>{{articletext}}</text>
    <view class='article-like'>
      <image class='article-like-icon' src='../images/sc.png'></image>
      <text class='article-like-text'>12</text>
      <image class='article-like-icon' src='../images/fx.png'></image>
      <text class='article-like-text'>30</text>
    </view>
  </view>
</template>